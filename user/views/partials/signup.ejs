<form action='/api/signup' method="POST">
    <h1 class="h3 mb-3 fw-normal">Create account</h1>

    <div class="form-floating">
        <!-- Email -->
        <input type="text" name="email" placeholder="email" class="form-control" autocomplete="on" required>
        <label for="email">Email</label>
    </div>

    <div class="form-floating">
        <!-- Password-->
        <input type="password" name="password" placeholder="password" class="form-control" autocomplete="on" required>
        <label for="password">Password</label>
    </div>

    <div class="form-floating">
        <!-- Password-->
        <input type="password" name="password2" placeholder="confirm password" class="form-control" autocomplete="on" required>
        <label for="password2">Confirm password</label>
    </div>

    <!-- Button -->
    <button class="w-100 btn btn-lg btn-primary" type="submit">Sign up</button>
</form>